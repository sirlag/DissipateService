extends ./layout.jade

block content
    if isEmpty
        div
            h2 Your search has returned no results
            include searchbar
    ul(class="demo-list-two mdl-list")#characters
        each char in characters
            li(class="mdl-list__item mdl-list__item--two-line")
                span(class="mdl-list__item-primary-content")
                    //i(class="material-icons mdl-list__item-avatar") person
                    img(class = "mdl-list__item-avatar", src="#{char.image}")
                    span
                        a(href="#{char.URL}")#{char.name}
                    span(class="mdl-list__item-sub-title") #{char.server}

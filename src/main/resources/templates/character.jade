extends ./layout.jade
block title
    title #{character.cName} | Dissipate
block content
    div(class="mdl-grid")
        div(class="mdl-cell mdl-cell--4-col")
            table(class="mdl-data-table mdl-js-data-table mdl-shadow--2dp")
                thead
                    th(class="mdl-data-table__cell--non-numeric")
                    th(class="mdl-data-table__cell--non-numeric") Name
                    th(class="mdl-data-table__cell") Level
                tbody
                    each item in character.leftItems
                        tr
                            td(class="mdl-data-table__cell--non-numeric")
                                img(src="#{item.imgurl}", width="40", height="40")
                            td(class="mdl-data-table__cell--non-numeric") #{item.name}
                            td(class="mdl-data-table__cell") #{item.itemLevel}
        div(class="mdl-cell mdl-cell--4-col")
            div(class="character-card-image mdl-card mdl-shadow--2dp", id="charImage")
                div(class="mdl-card__title mdl-card--expand")
                //img(src="#{character.characterPictureURL}", width="396", height="540")
                div(class="mdl-card__actions character-card-image__filename")
                    div #{character.cName}
                    div Item Level :#{character.itemLevel}
                    div Total Item Level : #{character.totalItemLevel}
        div(class="mdl-cell mdl-cell--4-col")
            table(class="mdl-data-table mdl-js-data-table mdl-shadow--2dp")
                thead
                    th(class="mdl-data-table__cell--non-numeric")
                    th(class="mdl-data-table__cell--non-numeric") Name
                    th(class="mdl-data-table__cell") Level
                tbody#character.items
                    each item in character.rightItems
                        tr
                            td(class="mdl-data-table__cell--non-numeric")
                                img(src="#{item.imgurl}", width="40", height="40")
                            td(class="mdl-data-table__cell--non-numeric") #{item.name}
                            td(class="mdl-data-table__cell") #{item.itemLevel}
    script
        document.getElementById("charImage").style.background = "url(#{character.characterPictureURL}) center / cover"
block scripts
    link(rel="stylesheet", href="/styles/character.css")
